<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
	<application>
		<resource-bundle>
			<base-name>bundle.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	<validator>
        <validator-id>italianUserCodeValidator</validator-id>
        <validator-class>validator.ItalianUserCodeValidator</validator-class>
    </validator>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>managedBeans.UserManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>coachParameters</managed-bean-name>
		<managed-bean-class>managedBeans.CoachParametersView</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>coach</managed-bean-name>
		<managed-bean-class>managedBeans.CoachView</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>window</managed-bean-name>
		<managed-bean-class>managedBeans.WindowController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
</faces-config>
